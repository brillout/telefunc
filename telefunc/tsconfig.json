{
  "compilerOptions": {
    "outDir": "./dist/esm/",
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["DOM", "ESNext"]
  },
  "include": ["client/**/*", "node/**/*"],
  "exclude": ["**/*.spec.ts"]
}
