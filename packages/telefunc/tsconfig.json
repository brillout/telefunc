{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2019",
    "module": "Node16",
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client"]
  },
  "include": ["client/**/*", "node/**/*"],
  "exclude": ["**/*.spec.ts"]
}
